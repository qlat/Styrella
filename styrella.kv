#:import label kivy.uix.label

BoxLayout:
    orientation: 'vertical'
    id: main_layout

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    ScreenManager:
        id: screen_manager
        Screen:
            id: choose_directories_screen
            name: 'choose_directories'
            manager: 'screen_manager'

            BoxLayout:
                orientation: 'horizontal'

                Widget:
                    size_hint_x: None
                    width: 75

                BoxLayout:
                    orientation: 'vertical'

                    # Top padding
                    Widget:
                        size_hint_y: None
                        height: 50

                    # Application heading
                    Label:
                        text: '[color=3C3C3C][size=26][b]Styrella[/b][/size][size=16]\nStylistic Relationships in Latin[/size][/color]'
                        halign: 'center'
                        markup: True

                    # Additional padding
                    Widget:
                        size_hint_y: None
                        height: 40

                    # Corpus directory
                    BoxLayout:
                        orientation: 'vertical'

                        Label:
                            text: 'Corpus directory:'
                            color: .23, .23, .23, 1
                            size_hint_y: None
                            height: 30
                            halign: 'left'

                        BoxLayout:
                            orientation: 'horizontal'

                            TextInput:
                                id: corpus_dir_input
                                text: 'Choose directory'
                                foreground_color: .23, .23, .23, 1
                                size_hint_y: None
                                height: 30

                            # Small spacing
                            Widget:
                                size_hint_x: None
                                width: 10

                            Button:
                                text: 'Choose'
                                size_hint: None, None
                                width: 85
                                height: 30
                                background_normal: ''
                                background_color: .85, .85, .85, 1
                                color: .23, .23, .23, 1
                                on_press: app.do_choose_corpus_dir()
                        Widget:


                    # Output directory
                    BoxLayout:
                        orientation: 'vertical'

                        Label:
                            text: 'Output directory:'
                            color: .23, .23, .23, 1
                            size_hint_y: None
                            height: 30

                        BoxLayout:
                            orientation: 'horizontal'

                            TextInput:
                                id: output_dir_input
                                text: 'Choose directory'
                                foreground_color: .23, .23, .23, 1
                                size_hint_y: None
                                height: 30

                            # Small spacing
                            Widget:
                                size_hint_x: None
                                width: 10

                            Button:
                                text: 'Choose'
                                size_hint: None, None
                                width: 85
                                height: 30
                                background_normal: ''
                                background_color: .85, .85, .85, 1
                                color: .23, .23, .23, 1

                                on_press: app.do_choose_output_dir()
                        Widget:



                    # Bottom padding
                    Widget:
                        size_hint_y: None
                        height: 50

                Widget:
                    size_hint_x: None
                    width: 75

